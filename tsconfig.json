{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "removeComments": true,
    "target": "ESNext",
    "module": "ESNext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "files": ["src/index.ts"],
  "include": ["types"],
  "exclude": ["node_modules"]
}
